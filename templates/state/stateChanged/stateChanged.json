{
    "id": "fk-state-changed",
    "className": "StateChanged",
    "name": "State changed",
    "config": {
        "category": "Global state",
        "outputs": 1,
        "fields": [
            { "id": "state", "label": "State", "type": "text", "required": true, "dataType": "fk-state"},
            { "id": "triggerOnInit", "label": "TriggerOnInit", "type": "checkbox", "required": true}
        ],
        "onSave": "function () { this.name = $('#node-input-state option:selected').text(); }",
        "label": "function () { return this.name ? 'On ' + this.name + ' changed' : 'State changed'; }",
        "color": "#FFCC00",
        "icon": "font-awesome/fa-database"
    },
    "help": "Help..."
}